@page "/posts/{id:int}"
@using Model
@using HttpClients.ClientInterfaces
@using Microsoft.AspNetCore.Components
@inject IPostService postService;

<div class="card" style="width: 80%">
                
    @if (!string.IsNullOrEmpty(errorLabel))
                {
                    <div class="field">
                        <label style="color: red">
                            @errorLabel
                        </label>
                    </div>
                }
    else
    {
        <h1 style="margin-bottom: 0.6rem">Title: @title</h1>
        <p>@body</p>
        <p style="text-align: right;margin-top: 0.3rem">Created by: @createdBy</p>
    }
</div>

@code {
    [Parameter]
    public int Id { get; set; }

    private string? title;
    private string? body;
    private string? createdBy;
    private string? errorLabel;

    protected override async Task OnInitializedAsync()
    {
        errorLabel = "";
        try
        {
            Post? post = await postService.GetByIdAsync(Id);
        
            if (post == null)
            {
                errorLabel = "Post non-exist";
                return;
            }
        
            title = post.Title;
            body = post.Body;
            createdBy = post.Creator.UserName;
        }
        catch (Exception e)
        {
            errorLabel = e.Message;
        }
       
    }

}